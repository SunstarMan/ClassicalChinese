/* **********文人头像及名字************** */

.extra-container {
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  flex-wrap: wrap;
}

.extra-item {
  width: 22%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
  margin-left: 10rpx;
  margin-right: 10rpx;
}

.mid-item {
  margin-left: 2%;
  margin-right: 2%;
}

.extra-img {
  width: 100%;
  height: 150rpx;
}

.extra-img image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.extra-text {
  font-size: 26rpx;
  color: #333;
  margin-top: 20rpx;
}

