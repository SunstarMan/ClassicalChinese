/* *************************设置按文章题目搜索的搜索按钮 ***********************************/

.search {
  width: 98%;
}

.search_arr {
  border: 1px solid #d0d0d0;
  border-radius: 10rpx;
  margin-left: 20rpx;
}

.search_arr input {
  margin-left: 100rpx;
  height: 60rpx;
  border-radius: 5px;
}

.sousuo {
  padding-left: 20%;
  width: 40%;
  line-height: 150%;
  text-align: center;
}

.page_row {
  display: flex;
  flex-direction: row;
  margin-top: 5rpx;
}

.searchcion {
  margin: 10rpx 10rpx 10rpx 10rpx;
  position: absolute;
  margin-left: 20%;
  z-index: 2;
  width: 15px;
  height: 15px;
  text-align: center;
}

